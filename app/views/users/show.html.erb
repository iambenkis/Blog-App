<section class='user-details'>
    <nav>
        <%= render "users/user", user: @user %>
    </nav>
    <div class='bio'>
        <h3>Bio</h3>
        <p><%= @user.bio%></p>
    </div>
    <% @user.recent_posts.each do |post| %>
        <%= render 'posts/post', post: post %>
    <% end %>
    <button type="button" class="see-all-posts">See all posts</button>
</section>

